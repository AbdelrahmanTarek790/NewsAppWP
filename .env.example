# Environment Configuration
NODE_ENV=development
PORT=3000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/news-press-api

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM_ADDRESS=no-reply@newspress.com
EMAIL_FROM_NAME=NewsPress API

# Media Storage
FILE_UPLOAD_PATH=public/uploads
MAX_FILE_UPLOAD_SIZE=5

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security
RATE_LIMIT_WINDOW_MS=15
RATE_LIMIT_MAX=100